.container {
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.meal-section {
  margin-bottom: 40rpx;
}

.meal-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.meal-icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.recipe-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.recipe-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.recipe-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.recipe-info {
  flex: 1;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.recipe-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.recipe-action {
  font-size: 24rpx;
  color: #FFB6C1;
}

.regenerate-btn {
  background: #FFB6C1;
  color: #fff;
  text-align: center;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.3);
} 